<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<item android:drawable="@drawable/gradient_blue_app"/>
<item>
    <bitmap android:src="@drawable/background_initial" android:gravity="center" android:alpha="0.1"/>
</item>

<item
    android:top="350dp"
    android:bottom="-400dp"
    android:left="0dp"
    android:right="-600dp">
    <rotate
        android:fromDegrees="-43"
        android:pivotX="0%"
        android:pivotY="100%">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?android:colorBackground"
                tools:targetApi="lollipop" />
        </shape>
    </rotate>
</item>
</layer-list>