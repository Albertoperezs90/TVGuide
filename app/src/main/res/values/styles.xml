<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="hintColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Hint.LightBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@android:color/white</item>
        <item name="floatingSearch_viewSearchInputTextColor">@color/black</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@color/black</item>
        <item name="floatingSearch_hintTextColor">@color/dark_gray</item>
        <item name="floatingSearch_dividerColor">@color/dark_gray</item>
        <item name="floatingSearch_clearBtnColor">@color/dark_gray</item>
        <item name="floatingSearch_leftActionColor">@color/dark_gray</item>
        <item name="floatingSearch_menuItemIconColor">@color/dark_gray</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/dark_gray</item>
        <item name="floatingSearch_actionMenuOverflowColor">@android:color/white</item>
    </style>

    <style name="DialogLogin" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryLight_Darker</item>
    </style>
</resources>
